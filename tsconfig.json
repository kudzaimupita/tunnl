{
	"compilerOptions": {
		"preserveConstEnums": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"target": "es5",
		"outDir": ".build",
		"moduleResolution": "node",
		"lib": ["es2015"],
		"rootDir": "./",
		"noImplicitAny": true,
		"esModuleInterop": true
	},
	"include": [
		"./*.js",
		"./*.ts",           // Include .ts files in the root
		"src/**/*.ts",
		"test/**/*.ts",
		"lambda.ts"
	  ]
}